@model IEnumerable<EInvoiceCore.Entities.InvoiceHeader>
@{
    ViewData["Title"] = "Index";
}

<h1>All Invoices</h1>
<div class="container">
    <div class="row">
        <p>
            <a asp-action="CreateInvoice" class="btn btn-primary">Create New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        InternalId
                    </th>
                    <th>
                        Customer Name
                    </th>
                    <th>
                        Invoice Date
                    </th>
                    <th>
                        Tax Value
                    </th>
                    <th>
                        Total Amount
                    </th>
                    <th>
                        NetValue
                    </th>
                    <th>
                    </th> 
                    <th>
                    </th>
                    <th>
                    </th>
                </tr>
            </thead>

            @if (Model.Count() > 0)
            {
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id">
                                    @Html.DisplayFor(modelItem => item.InternalId)
                                </a>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CustomerName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.InvoiceDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TaxValue)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NetTotal)
                            </td>
                            
                        </tr>
                    }
                </tbody>
            }

        </table>
    </div>
</div>

